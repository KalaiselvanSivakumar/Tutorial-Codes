<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="12dp">

	<TextView
		android:id="@+id/customListViewNameLabel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/custom_list_view_name_label" />

	<TextView
		android:id="@+id/customListViewNameValue"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/customListViewNameLabel" />

	<TextView
		android:id="@+id/customListViewPhoneLabel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/customListViewNameLabel"
		android:text="@string/custom_list_view_phone_label" />

	<TextView
		android:id="@+id/customListViewPhoneValue"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/customListViewNameLabel"
		android:layout_toEndOf="@id/customListViewPhoneLabel" />

</RelativeLayout>